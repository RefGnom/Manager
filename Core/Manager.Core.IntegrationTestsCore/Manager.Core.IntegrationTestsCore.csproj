        <PackageReference Include="Testcontainers" Version="4.7.0"/>
        <PackageReference Include="Testcontainers.PostgreSql" Version="4.7.0"/>
        <PackageReference Include="NUnit" Version="4.4.0"/>
        <PackageReference Include="NUnit3TestAdapter" Version="4.6.0"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Manager.Core.Common\Manager.Core.Common.csproj"/>
        <ProjectReference Include="..\Manager.Core.EFCore\Manager.Core.EFCore.csproj"/>
        <ProjectReference Include="..\Manager.Core.Logging\Manager.Core.Logging.csproj"/>
        <ProjectReference Include="..\Manager.Core.Networking\Manager.Core.Networking.csproj"/>
        <ProjectReference Include="..\Manager.Core\Manager.Core.csproj"/>
    </ItemGroup>

</Project>
